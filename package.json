  "scripts": {
    "dev": "vite",
    "watch:ui": "vite --config vite.config.ts",
    "watch:main": "tsc --project tsconfig.main.json --watch",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:ui\"",
    "build:main": "tsc --project tsconfig.main.json",
    "build:ui": "vite build",
    "build": "rm -rf dist && npm run build:ui && npm run build:main",
    "build:watch": "rm -rf dist && npm run build:ui && npm run build:main -- --watch",
    "preview": "serve dist"
  },
