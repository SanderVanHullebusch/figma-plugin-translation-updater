{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["@figma/plugin-typings", "node"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/code.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
